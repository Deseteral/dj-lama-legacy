{
  "name": "dj-lama",
  "version": "2.0.0-beta.4",
  "description": "A user-driven radio station.",
  "main": "build/server.js",
  "engines": {
    "node": "7.2.0"
  },
  "scripts": {
    "clean": "rm -rf build",
    "start": "node build/src/index.js",
    "inspect": "node --inspect build/src/index.js",
    "postinstall": "npm run build",
    "test": "npm run build && npm run unit-test && npm run lint",
    "build": "npm run clean && npm run build-server && npm run build-client",
    "build-and-run": "npm run build && npm start",
    "build-server": "gulp",
    "build-client": "webpack --config webpack.client.config.js",
    "unit-test": "npm run unit-test-server && npm run unit-test-client",
    "unit-test-server": "gulp build-server-tests && mocha build/tests/**/*.test.js",
    "unit-test-client": "mocha-webpack --webpack-config webpack.test.config.js --require ./tests/setup/setup-components.js \"src/components/**/*.test.js\"",
    "lint": "eslint . --ext .js,.jsx"
  },
  "dependencies": {
    "babel-core": "6.18.2",
    "babel-loader": "6.2.8",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-es2015-node6": "0.4.0",
    "babel-preset-react": "6.16.0",
    "body-parser": "1.15.2",
    "compression": "1.6.2",
    "css-loader": "0.26.0",
    "dropbox": "2.5.0",
    "express": "4.14.0",
    "gulp": "3.9.1",
    "gulp-babel": "6.1.2",
    "gulp-htmlmin": "3.0.0",
    "gulp-sourcemaps": "1.9.1",
    "json-loader": "0.5.4",
    "less": "2.7.1",
    "less-loader": "2.2.3",
    "nedb": "1.8.0",
    "nedb-promise": "2.0.0",
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-markdown": "2.4.4",
    "serve-favicon": "2.3.2",
    "source-map-support": "0.4.6",
    "style-loader": "0.13.1",
    "webpack": "1.13.3"
  },
  "devDependencies": {
    "enzyme": "2.6.0",
    "eslint": "3.14.1",
    "eslint-config-airbnb": "14.0.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.9.0",
    "jsdom": "9.8.3",
    "mocha": "3.2.0",
    "mocha-webpack": "0.7.0",
    "react-addons-test-utils": "15.4.1",
    "should": "11.1.1",
    "sinon": "1.17.7",
    "source-map-support": "0.4.6",
    "supertest": "2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deseteral/dj-lama.git"
  },
  "author": "Deseteral <github.com/deseteral>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Deseteral/dj-lama/issues"
  },
  "homepage": "https://github.com/Deseteral/dj-lama#readme"
}
