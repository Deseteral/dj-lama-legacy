{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "airbnb",
  "rules": {
    "comma-dangle": ["error", "never"],
    "dot-notation": "off",
    "no-use-before-define": ["error", { "functions": false }],
    "no-underscore-dangle": ["error", { "allow": ["_id", "__props"] }],
    "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".test.js"] }]
  }
}
